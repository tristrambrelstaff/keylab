<%= render @document %>

<div>
  <%= link_to(
        "Edit this document",
        edit_document_path(@document)
      ) if admin_signed_in?
  %>

  <%= button_to(
        "Destroy this document",
        document_path(@document),
        method: :delete, form: {data: {turbo_confirm: "Are you sure?"}}
      ) if admin_signed_in?
  %>
</div>
